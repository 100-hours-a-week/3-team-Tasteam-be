<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!-- 환경변수로 경로 관리 -->
    <property name="LOG_FILE_PATH" value="${LOG_FILE_PATH:-./logs/application.log}" />
    <property name="LOG_MAX_FILE_SIZE" value="${LOG_MAX_FILE_SIZE:-100MB}" />
    <property name="LOG_MAX_HISTORY" value="${LOG_MAX_HISTORY:-30}" />

    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter" />

    <!-- 파일 Appender: Loki용 JSON 포맷 (dev/prod 공통) -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH}</file>
        <append>true</append>

        <!-- Logstash JSON Encoder -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE_PATH}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>${LOG_MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${LOG_MAX_HISTORY}</maxHistory>
        </rollingPolicy>
    </appender>

    <springProfile name="!prod">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>INFO</level>
            </filter>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, UTC} %clr(%-5level){DEBUG=magenta, INFO=green, WARN=yellow, ERROR=red} %cyan([%10.10thread]) %clr(pid=%property{PID}){blue} %magenta(%-40logger{35}) : %msg%n</pattern>
            </encoder>
        </appender>

        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>

        <root level="DEBUG">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="JSON_FILE" />
        </root>
    </springProfile>

    <springProfile name="prod">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>INFO</level>
            </filter>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, UTC} %clr(%-5level){DEBUG=magenta, INFO=green, WARN=yellow, ERROR=red} %cyan([%10.10thread]) %clr(pid=%property{PID}){blue} %magenta(%-40logger{35}) : %msg%n</pattern>
            </encoder>
        </appender>

        <logger name="org.hibernate.SQL" level="WARN" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>

        <root level="INFO">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="JSON_FILE" />
        </root>
    </springProfile>
</configuration>
