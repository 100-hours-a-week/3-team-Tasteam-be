<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property name="LOG_PATH" value="./logs" />

    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter" />

    <springProfile name="!prod">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>INFO</level>
            </filter>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, UTC} %clr(%-5level){DEBUG=magenta, INFO=green, WARN=yellow, ERROR=red} %cyan([%10.10thread]) %clr(pid=%property{PID}){blue} %magenta(%-40logger{35}) : %msg%n</pattern>
            </encoder>
        </appender>

        <appender name="INFO_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>DEBUG</level>
            </filter>
            <file>${LOG_PATH}/info.log</file>
            <append>true</append>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/%d{yyyy-MM-dd}/info_%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, UTC} %-5level [%10.10thread] pid=%property{PID} %logger : %msg%n</pattern>
            </encoder>
        </appender>

        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="STDOUT" />
        </logger>

        <root level="DEBUG">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="INFO_LOG" />
        </root>
    </springProfile>

    <springProfile name="prod">
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>WARN</level>
            </filter>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, UTC} %clr(%-5level){DEBUG=magenta, INFO=green, WARN=yellow, ERROR=red} %cyan([%10.10thread]) %clr(pid=%property{PID}){blue} %magenta(%-40logger{35}) : %msg%n</pattern>
            </encoder>
        </appender>

        <appender name="INFO_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>WARN</level>
            </filter>
            <file>${LOG_PATH}/info.log</file>
            <append>true</append>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_PATH}/%d{yyyy-MM-dd}/info_%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
                <maxFileSize>10MB</maxFileSize>
                <maxHistory>30</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, UTC} %-5level [%10.10thread] pid=%property{PID} %logger : %msg%n</pattern>
            </encoder>
        </appender>

        <logger name="org.hibernate.SQL" level="WARN" additivity="false">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="INFO_LOG" />
        </logger>

        <root level="WARN">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="INFO_LOG" />
        </root>
    </springProfile>
</configuration>
